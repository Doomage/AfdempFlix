@model IEnumerable<AfdempFlix.Models.Movie>
@{
    ViewBag.Title = "Home";
}

<div id="carouselExampleIndicators" class="carousel slide card-img-top" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        
        <div class="carousel-item active">
            @*<div class="center">
                <input type="text" placeholder="Search..">
            </div>*@
            <img class="d-block w-100" src="https://media.architecturaldigest.in/wp-content/uploads/2018/06/FIFA-2018-World-Cup-Featured-1366x768.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>World Cap!</h5>
                <p>Find Your Court Now!</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://static.euronews.com/articles/stories/03/15/68/25/880x495_cmsv2_a9dcd7ed-1ff5-5d7c-8de0-63b847a68c91-3156825.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>We love Football!</h5>
                <p>Find Your Court Now!</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="http://s1.1zoom.me/b5752/43/Footbal_Men_Ball_Glove_515345_1366x768.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Ball Court easy to find!</h5>
                <p>Find Your Court Now!</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container-fluid">
    <div class="row">
        <br />
        @foreach (var movie in Model)
        {
            <div class="col-sm-3 nav-margin">
                <div class="card bg-dark text-white rounded ml-3 mt-3 mr-3">
                    <img src="@movie.ThumbnailUrl" class="card-img movie-Thumbnail" alt="@movie.Title">
                    <div class="card-img-overlay">
                        <h4 class="card-title">@movie.Title</h4>
                        @*<h5 class="card-subtitle">@movie.Genre</h5>
                        <p class="card-text">@movie.Description</p>*@
                        <a href="@movie.TrailerUrl" class="btn btn-block btn-primary bottom">Watch Now! </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
